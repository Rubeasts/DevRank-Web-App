.jumbotron
  .container
    .title
      h3
        | DEVELOPER
.content
  .container
    .row
      .col-md-3
        h1
          img.img-responsive.img-rounded[class="avatar" src="#{@data['avatar_url']}" alt="Profile Picture"]
          h4 #{@data&.name}
          small
            cite
              | #{@data&.location}
              i.glyphicon.glyphicon-map-marker
          small
            p Email: #{@data&.email}
            p
              | github:
              a href="https://github.com/#{@data&.username}"
                | www.github.com/#{@data&.username}
            p Followers: #{@data&.followers}
            p Following: #{@data&.following}
            p Stars: #{@data&.stars}
            p Flog Score : #{@data&.flog_avg.to_i}
            p Rubocop Score : #{@data&.rubocop_avg.to_i}
      .col-md-9
        h1
        .col-md-12
          - @data&.repositories&.each&.with_index do |repo, index|
            .panel.panel-default
              .panel-heading
                h3.panel-title.pull-left
                  | #{repo.full_name}
              .panel-body
                canvas id="chart#{index}" width="800" height="300"
                javascript:
                  var part_all_string = "#{eval(repo.stat.participation)["all"]}";
                  part_all = JSON.parse("[" + part_all_string + "]");
